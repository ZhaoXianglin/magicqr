<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_match_imageqr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/iv_select_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/make_img_bkg"/>

        <LinearLayout
            android:id="@+id/typeof_qr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_qrtype"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:background="#dddddd"
                android:gravity="center_vertical"
                android:paddingLeft="18dip"
                android:text="选择二维码类型" />

            <RadioGroup
                android:id="@+id/rg_typeof_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="二维码类型" >

                <RadioButton
                    android:id="@+id/rb_typeof_qr_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fffacd"
                    android:text="声音二维码" />

                <RadioButton
                    android:id="@+id/rb_typeof_qr_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff8dc"
                    android:text="视频二维码" />
                 <RadioButton
                    android:id="@+id/rb_typeof_qr_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff5ee"
                    android:text="图片二维码" />
                 <RadioButton
                    android:id="@+id/rb_typeof_qr_match"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff0f5"
                    android:text="万能二维码" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_upload_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_match_image_show"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_weight="1"
            android:background="@drawable/squar_button_training"
            android:gravity="center"
            android:text="预览效果"
            android:textColor="#ffffffff"
            android:textSize="20dip" />

        <Button
            android:id="@+id/btn_match_image_make"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="1dip"
            android:layout_weight="1"
            android:background="@drawable/squar_button_training"
            android:gravity="center"
            android:text="合成图片"
            android:textColor="#ffffffff"
            android:textSize="20dip" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/jarvis/AndroidStudioProjects/magicqr/app/src/main/res/layout/activity_match_image.xml -->